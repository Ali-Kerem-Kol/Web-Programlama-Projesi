@model EmployeeDto
@{
}

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Çalışan Düzenle</h2>

		<form method="post">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Id</label>
				<div class="col-sm-8">
					<input class="form-control-plaintext" readonly value="@ViewData["EmployeeId"]" />
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Username</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Username" />
					<span asp-validation-for="Username" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Password</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Password" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Role</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Role" />
					<span asp-validation-for="Role" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Expertise</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Expertise" />
					<span asp-validation-for="Expertise" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group">
				<label>Müsaitlik Durumu:</label>
				<div>
					<input type="radio" id="available" name="IsAvailable" value="true" @(Model.IsActive ? "checked" : "") />
					<label for="available">Müsait</label>
				</div>
				<div>
					<input type="radio" id="notAvailable" name="IsAvailable" value="false" @(!Model.IsActive ? "checked" : "") />
					<label for="notAvailable">Dolu</label>
				</div>
			</div>

			<div class="row">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-controller="Admin" asp-action="SalonDashboard" role="button">Cancel</a>
				</div>
			</div>

		</form>
	</div>
</div>