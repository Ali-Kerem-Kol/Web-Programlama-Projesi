			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Employee Username</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Username" />
					<span asp-validation-for="Username" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Employee Password</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Password" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">User Role</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Role" value="Employee" readonly/>
					<span asp-validation-for="Role" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Expertise</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Expertise" />
					<span asp-validation-for="Expertise" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group">
				<label>IsActive:</label>
				<div>
					<input type="radio" id="available" name="IsActive" value="true" checked />
					<label for="available">Müsait</label>
				</div>
				<div>
					<input type="radio" id="notAvailable" name="IsActive" value="false" />
					<label for="notAvailable">Dolu</label>
				</div>
			</div>

			<div class="row">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-controller="Admin" asp-action="EmployeeDashboard" role="button">Cancel</a>
				</div>
			</div>

		</form>
