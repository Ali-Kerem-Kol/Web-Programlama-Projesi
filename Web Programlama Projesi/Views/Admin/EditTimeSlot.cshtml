@model TimeSlotDto

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Zaman Dilimini Düzenle</h2>

        <form method="post">
            <div class="row mb-3">
                <input type="hidden" asp-for="SalonId" />
                <label class="col-sm-4 col-form-label">Başlangıç Saati</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="StartTime" type="text" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Bitiş Saati</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="EndTime" type="text" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                @if (ViewData["Customer"] != null)
                {
                    <label class="col-sm-4 col-form-label">Saat dilimindeki kullanıcı</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" readonly value="@((ViewData["Customer"] as User)?.Username)" />
                    </div>
                }
                else
                {
                    <label class="col-sm-4 col-form-label">Saat dilimindeki kullanıcı</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" readonly value="Kullanıcı yok" />
                    </div>
                }
            </div>

            <div class="form-group">
                <label>Müsaitlik Durumu:</label>
                <div>
                    <input type="radio" id="available" name="IsAvailable" value="true" @(Model.IsAvailable ? "checked" : "") />
                    <label for="available">Müsait</label>
                </div>
                <div>
                    <input type="radio" id="notAvailable" name="IsAvailable" value="false" @(!Model.IsAvailable ? "checked" : "") />
                    <label for="notAvailable">Dolu</label>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Düzenle</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="TimeSlotDashboard" asp-route-id="@ViewData["SalonId"]" role="button">İptal</a>
                </div>
            </div>
        </form>
    </div>
</div>
