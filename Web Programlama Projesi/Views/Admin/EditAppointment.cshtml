@model AppointmentDto
@{
}

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Randevu Düzenle</h2>

		<form method="post">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Id</label>
				<div class="col-sm-8">
					<input class="form-control-plaintext" readonly value="@ViewData["AppointmentId"]" />
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">TimeSlot Id</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="TimeSlotId" />
					<span asp-validation-for="TimeSlotId" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Customer Id</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="CustomerId" />
					<span asp-validation-for="CustomerId" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Customer Name</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="CustomerName" />
					<span asp-validation-for="CustomerName" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Employee Id</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="EmployeeId" />
					<span asp-validation-for="EmployeeId" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Employee Name</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="EmployeeName" />
					<span asp-validation-for="EmployeeName" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Price</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Price" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
			</div>

			<div class="row">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-controller="Admin" asp-action="SalonDashboard" role="button">Cancel</a>
				</div>
			</div>

		</form>
	</div>
</div>