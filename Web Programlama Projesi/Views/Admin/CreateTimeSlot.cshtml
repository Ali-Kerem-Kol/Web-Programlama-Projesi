@model TimeSlotDto

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Zaman Dilimi Ekle</h2>

        <form method="post">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Salon Adı</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" value="@ViewData["SalonName"]" readonly />
                </div>
            </div>
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Başlangıç Saati</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="StartTime" type="text" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Bitiş Saati</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="EndTime" type="text" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="TimeSlotDashboard" asp-route-id="@ViewData["SalonId"]" role="button">İptal</a>
                </div>
            </div>
        </form>
    </div>
</div>
