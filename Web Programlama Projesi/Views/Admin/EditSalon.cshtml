@model SalonDto
@{
}

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Salon Düzenle</h2>

		<form method="post">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Id</label>
				<div class="col-sm-8">
					<input class="form-control-plaintext" readonly value="@ViewData["SalonId"]" />
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Name</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Name" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">WorkingHours</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="WorkingHours" />
					<span asp-validation-for="WorkingHours" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Appointment Price</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="AppointmentPrice" />
					<span asp-validation-for="AppointmentPrice" class="text-danger"></span>
				</div>
			</div>

			<div class="row">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-controller="Admin" asp-action="SalonDashboard" role="button">Cancel</a>
				</div>
			</div>

		</form>
	</div>
</div>