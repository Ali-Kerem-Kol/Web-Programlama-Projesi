@model IEnumerable<Web_Programlama_Projesi.Models.Employee>

@{
    ViewData["Title"] = "Çalışanlar";
}

<h2>@ViewData["Title"]</h2>

@foreach (var employee in Model)
{
    <div>
        <!-- Username bilgisi artık employee.User.Username üzerinden çekiliyor -->
        <h3>@employee.User?.Username ?? "Belirtilmemiş"</h3>
        <p>Uzmanlık: @employee.Expertise</p>
        <p>Durum: @(employee.IsActive ? "Aktif" : "Pasif")</p>

        <!-- Çalışanlar sadece görüntülenebilir, randevu alınamaz -->
        <p>Randevu kabul etmek için giriş yapmalısınız.</p>
    </div>
}
