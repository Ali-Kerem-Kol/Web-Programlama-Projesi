@model IEnumerable<Web_Programlama_Projesi.Models.Employee>

@{
    ViewData["Title"] = "Çalışanlar";
}

<h2 class ="text-center mb-5">@ViewData["Title"]</h2>

<div class="row">
    @foreach (var employee in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="employee-box @(employee.User?.IsActive == true ? "active" : "inactive")">
                <h3>@employee.User?.Username</h3>
                <p><strong>Uzmanlık:</strong> @employee.Expertise</p>
                <p><strong>Durum:</strong> @(employee.User?.IsActive == true ? "Aktif" : "Pasif")</p>
            </div>
        </div>
    }
</div>

<!-- CSS için düzenlemeler -->
<style>
    .employee-box {
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s;
    }

        .employee-box:hover {
            transform: scale(1.05);
        }

    .active {
        background-color: #28a745; /* Yeşil */
        color: white;
    }

    .inactive {
        background-color: #dc3545; /* Kırmızı */
        color: white;
    }

    .employee-box h3 {
        margin: 0 0 10px 0;
    }

    .employee-box p {
        margin: 5px 0;
    }

    .employee-box strong {
        font-weight: bold;
    }
</style>
