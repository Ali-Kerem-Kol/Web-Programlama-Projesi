@model User

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <!-- Kullanıcı Adı -->
                        <div class="form-group mb-3">
                            <label for="Username" class="form-label">Kullanıcı Adı</label>
                            <input type="text" class="form-control" id="Username" name="Username" placeholder="Kullanıcı adınızı girin" required />
                            @if (ViewData.ModelState["Username"]?.Errors.Count > 0)
                            {
                                <span class="text-danger d-block mt-1">
                                    @ViewData.ModelState["Username"]?.Errors[0]?.ErrorMessage
                                </span>
                            }
                        </div>

                        <!-- Şifre -->
                        <div class="form-group mb-3">
                            <label for="Password" class="form-label">Şifre</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Şifrenizi girin" required />
                        </div>

                        <!-- Gönder Butonu -->
                        <button type="submit" class="btn btn-success w-100">Kayıt Ol</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
